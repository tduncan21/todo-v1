<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %> - Todo List</h1>    
    </div>

    <!-- Todo List Items -->
    <section id="todo-list">
        <div class="box">
            <% for(item of itemList) { %>
                <div class="item">                
                    <input type="checkbox">
                    <p><%=item%></p>
                </div>
            <%}%>
            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="Next Item" autofocus autocomplete="off">
                <button type="submit" name="list" value= <%= listTitle %>>+</button>
                <button type="submit" name="item" value="remove">-</button>
            </form>
        </div>
    </section>

<%- include("footer") -%>