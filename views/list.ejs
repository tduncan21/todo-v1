<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %> - Todo List</h1>    
    </div>

    <!-- Todo List Items -->
    <section id="todo-list">
        <div class="box">
            <% for(item of itemList) { %>
                <form  action="/remove" method="POST">
                    <div class="item">    
                        <input name="listName" type="hidden" value="<%=listTitle%>">
                        <input name="checkbox" type="checkbox" onchange="this.form.submit()" value="<%=item.id%>">
                        <p><%=item.name%></p>
                    </div>
                </form>            
            <%}%>
            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="Next Item" autofocus autocomplete="off" required>
                <button type="submit" name="list" value= <%= listTitle %>>+</button>
            </form>
        </div>
    </section>

<%- include("footer") -%>